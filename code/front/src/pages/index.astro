---
import Layout from '../layouts/Layout.astro';
import ServiceTimeline from '../components/ServiceTimeline.astro';
import StatusSummary from '../components/StatusSummary.astro';
import Communications from '../components/Communications.astro';
---

<Layout title="Service Uptime Dashboard">
  <main class="mx-auto p-8 w-full max-w-7xl">
    <div class="flex justify-between items-center mb-12">
      <div>
        <h1 class="text-4xl font-bold text-gray-900 mb-2">LiteStatus</h1>
        <p class="text-sm text-gray-600" id="last-updated">Loading...</p>
      </div>
      <StatusSummary />
    </div>
    
    <div id="service-timelines" class="space-y-6 mb-12">
      <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
        <div class="animate-pulse flex space-x-4">
          <div class="flex-1 space-y-4 py-1">
            <div class="h-4 bg-gray-200 rounded w-3/4"></div>
            <div class="space-y-2">
              <div class="h-4 bg-gray-200 rounded"></div>
              <div class="h-4 bg-gray-200 rounded w-5/6"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <Communications />
  </main>

  <script>
    import { setupDashboard } from '../utils/dashboard';
    setupDashboard();
  </script>
</Layout>