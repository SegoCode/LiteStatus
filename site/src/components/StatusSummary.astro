---
interface Props {
  status: 'up' | 'down';
}

const { status } = Astro.props;

const getStatusIcon = (status: 'up' | 'down') => {
  return status === 'up'
    ? '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>'
    : '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>';
};
---

<div class={`flex items-center px-6 py-4 rounded-xl font-semibold transition-all duration-300 hover:-translate-y-0.5 hover:shadow-md border ${
  status === 'up' 
    ? 'bg-green-50 text-green-800 border-green-200' 
    : 'bg-red-50 text-red-800 border-red-200'
}`}>
  <span class="mr-3">
    <Fragment set:html={getStatusIcon(status)} />
  </span>
  <span class="text-lg">
    {status === 'up' ? 'All Systems Operational' : 'System Issues Detected'}
  </span>
</div>